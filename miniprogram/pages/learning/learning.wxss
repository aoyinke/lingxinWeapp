page{
  height: 100%;

}
swiper{
  height: 100%;
}
.tab{
  margin-top: 15rpx;
  display: flex;

}
.tab-item{
  flex: 1;
  text-align: center;
  background-color: #ffff;
  line-height: 72rpx;
  font-size: 13pt;
  box-sizing: border-box;
}

.content{
  height: 100%;
}
.tab-item.active{
  color:#c25b5b;
  border-bottom: 2px solid #c25b5b;
}

.learning{
  display: flex;
  margin: 20px 10px 10px 10px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);

  
}
.learning-subject image{
  width:200rpx;
  height: 300rpx;
}
.learning-title{
  font-weight: bold;
  text-shadow: 5px 5px 5px silver;
  font-size: 20px;
  width: 600rpx;

}
.learning-check{
  position: absolute;
  display: block;
  margin:225rpx 210rpx;
  width: 100px;

}
.learning-check button{
  width: 100px;
}
.learning-content{
  display: flex;
  position: relative;
  margin-top: 30px;
}

